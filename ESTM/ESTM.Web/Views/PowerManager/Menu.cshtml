@{
    ViewBag.Title = "菜单管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/PowerManage/MenuManage")

<div class="panel-body" style="padding-bottom:0px;">
    <div class="panel panel-default">
        <div class="panel-heading">查询条件</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <label for="txt_search_menuname" class="col-sm-4 control-label" style="margin-top:6px;">菜单名称</label>
                    <span class="col-sm-8">
                        <input type="text" class="form-control" id="txt_search_menuname">
                    </span>
                </div>
                <div class="col-md-4">
                    <label for="txt_search_menuurl" class="col-sm-4 control-label" style="margin-top:6px;">菜单URL</label>
                    <span class="col-sm-8">
                        <input type="text" class="form-control" id="txt_search_menuurl">
                    </span>
                </div>

                <div class="col-md-4">
                    <button type="button" id="btn_query" class="btn btn-primary">查询</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="toolbar" class="btn-group">
    <button id="btn_add" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
    </button>
    <button id="btn_edit" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
    </button>
    <button id="btn_delete" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
    </button>
</div>
<table id="tb_menus"></table>

<form>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="txt_menuname">菜单名称</label>
                        <input type="text" name="txt_menuname" class="form-control" id="txt_menuname" placeholder="菜单名称">
                    </div>
                    <div class="form-group">
                        <label for="txt_menuurl">菜单URL</label>
                        <input type="text" name="txt_menuurl" class="form-control" id="txt_menuurl" placeholder="菜单URL">
                    </div>
                    <div class="form-group">
                        <label for="txt_parentmenu">父级菜单</label>
                        <input type="text" name="txt_parentmenu" class="form-control" id="txt_parentmenu" placeholder="父级菜单">
                    </div>
                    <div class="form-group">
                        <label for="txt_menulevel">菜单级别</label>
                        <input type="text" name="txt_menulevel" class="form-control" id="txt_menulevel" placeholder="菜单级别">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
                </div>
            </div>
        </div>
    </div>
</form>


